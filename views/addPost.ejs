<h1>Create Post</h1>
<form action="/create-post" method="post">
  <div>
    <label for="title">Enter title</label>
    <input type="text" id="title" name="title" required />
  </div>
  
  <div>
    <label for="description">Enter description</label>
    <textarea
      name="description"
      id="description"
      cols="30"
      rows="10"
    ></textarea>
  </div>
    <button>Add Post</button>
    <a href="/">Back</a>
 
</form>
